<h1><%= @list.name %></h1>

<ul class="list-group">
    <% @list.movies.each do |movie| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= movie.title %>
      </li>
    <% end %>
  </ul>

<%= link_to "Add a new movie and comment", new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
<%= link_to "delete the list", list_path(@list), class: "btn btn-primary mt-3", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to "Return to lists", lists_path, class: "btn btn-primary mt-3" %>
