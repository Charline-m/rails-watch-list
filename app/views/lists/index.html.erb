<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(data:image/jpeg;base64,);">
  <div class="container">
    <h1>Your cinema <strong>in a list</strong>!</h1>
    <p>Cherchez votre film par cat√©gorie</p>
  </div>
</div>

<<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
      <div class="card h-100 bg-dark text-white text-center shadow-lg">
        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
          <div class="mb-3">
            <i class="bi bi-plus-circle-fill display-4"></i>
          </div>
          <%= link_to "Create New List", new_list_path, class: "text-white text-decoration-none stretched-link fw-bold" %>
        </div>
      </div>
    </div>

    <% @lists.each do |list| %>
      <div class="col">
        <div class="card h-100 border-secondary">
          <div class="card-body bg-light text-center">
            <h5 class="card-title">
              <%= link_to list.name, list, class: "text-decoration-none text-secondary stretched-link fw-bold" %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @lists.empty? %>
    <div class="alert alert-secondary text-center mt-3">
      No lists found.
    </div>
  <% end %>
</div>
